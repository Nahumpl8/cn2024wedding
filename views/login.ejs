<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/images/favicon.png" type="image/x-icon">
    <link rel="icon" href="/images/favicon.png" type="image/png">
    <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon">
    <title>Claudia & Nahum</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/awesomplete/1.1.2/awesomplete.min.js"></script>
    <style>
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        html{
            font-size: 10px;
        }
        body{
            background-color: #f5f5f5;
        }
        .principal{
            display: grid;
            grid-template-columns: 1fr 1fr;
            height: 100vh;
        }
        
        .photo img{
            width: 100%;
            height: 100vh;
            object-fit: cover;
        }

        .access_page{
            display: flex;
            flex-direction: column;
            justify-content: start;
            align-items: center;
        }
        .logo_cn a{
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .logo_cn img{
            width: 30%;
        }
        .form_access{
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            padding: 5%;
        }
        .form_access form{
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-evenly;
            height: 20vh;
        }

        .title{
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 5%;
        }
        .title h1{
            font-family: Georgia, 'Times New Roman', Times, serif;
            font-size: 3rem;
            color: #c0a080;
        }
        .title h2{
            font-family: Georgia, 'Times New Roman', Times, serif;
            font-size: 1.8rem;
            color: #c0a080;
        }

        #nombre,
        #contraseña {
            border: none;
            border-bottom: 2px solid #c0a080;
            background-color: transparent;
            padding: 10px 20px;
            font-family: Georgia, 'Times New Roman', Times, serif;
            text-align: center;
            color: rgb(96, 118, 96);
            font-size: 1.8rem;
            transition: border-bottom 0.3s, color 0.3s; 
            width: 270px;
            margin-top: 50px;
        }

        #nombre:focus,
        #contraseña:focus {
            border: none !important;
            border-bottom: 2px solid #c0a080;
            background-color: transparent; 
            color: rgb(96, 118, 96); 
        }
        #nombre:active,
        #contraseña:active {
            border: none !important;
            background-color: transparent; 
            color: rgb(96, 118, 96); 
        }
        

        #nombre::-webkit-input-placeholder,
        #contraseña::-webkit-input-placeholder {
            border: none;
            color: rgba(96, 118, 96, 0.4);
        }
        

        button{
            margin-top: 30px;
            border: none;
            border-radius: 5px;
            background-color: #c0a080;
            color: #f5f5f5;
            padding: 10px;
            cursor: pointer;
            transition: .4s;
        }
        button:hover{
            transform: scale(1.1);
        }
        .form_access h2{
            display: none;
        }
        .awesomplete ul{
            position: absolute;
            background-color: #f5f5f5cd;
            border: 2px solid #c0a080;
            width: 270px;
            border-radius: 0 0 5px 5px;
        }
        .awesomplete ul li{
            list-style: none;
            padding: 10px;
            color: rgb(96, 118, 96);
            cursor: pointer;
            border-bottom: 1px solid #c0a080;
            font-size: 1.6rem;
            text-align: center;
            transition: .8s;
        }
        .awesomplete ul li:hover{
            background-color: #c0a080;
            color: #f5f5f5;
        }
        mark{
            background-color:transparent !important;
            padding:0;
            margin:0;
        }


        @media screen and (max-width: 720px) {
            .principal{
                display: grid;
                grid-template-columns: 1fr;
                height: 100vh;
            }
            .photo_web{
                position: relative;
            }
            .photo_web img{
                filter: brightness(.5);
                object-position: bottom;
            }
            .logo_cn{
                position: absolute;
                top: 0%;
                z-index: 2;
            }
            .logo_cn img{
                filter: brightness(1.2);
            }
            .title{
                position: absolute;
                top: 18%;
            }
            .title h1{
                font-size: 3.6rem;
                color: #f5f5f5;
            }
            .title h2{
                font-size: 2.4rem;
                margin-top: 15px;
                color: #f5f5f5;
            }
            
            .title h1, h2{
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            }
            .form_access{
                position: absolute;
                background-color: #f5f5f5bf;
                bottom: 28%;  
                border-radius: 5px;  
                width: 300px;  
                bottom: 22%;
            }
            .form_access h2{
                display: block;
                width: 100%;
                text-align: center;
                color: rgb(96, 118, 96);
                text-shadow: none;
                margin-bottom: 20px;
            }
            .awesomplete ul{
                width: 270px;
            }
        }
    </style>
</head>
<body>
    <section class="principal">
        <div class="photo_web">
          <div class="photo">
            <img src="/images/NahunClau_Preboda-19.jpg" alt="">
          </div>
        </div>
        <div class="access_page">
            <div class="logo_cn">
                <a href="/"><img src="/images/goldLogo.png" alt=""></a> 
            </div>
          <div class="title">
            <h1>Claudia & Nahum</h1>
            <h2>19 · Octubre · 2024</h2>
          </div>
          <div class="form_access">
                <h2>Ingresa con tu usuario y contraseña para ver tu invitación</h2>
                <form action="/login" method="post">
                <label for="nombre"></label>
                <input type="text" id="nombre" name="nombre" placeholder="Selecciona tu nombre" autocomplete="on" required>
        
                <label for="contraseña"></label>
                <input type="password" id="contraseña" name="contraseña" placeholder="Contraseña" required>
        
                <button type="submit">Ver invitación</button>
                <div class="go_back">
                    <a href="/">Regresar</a>
                </div>
            </form>

          </div>
        </div>
        
      </section>

    <!-- Agrega esta línea en la sección head de tu HTML -->
    
    <script>
        const nombreInput = document.getElementById('nombre');
        const opcionesNombre = JSON.parse('<%- JSON.stringify(opcionesNombre) %>');


        new Awesomplete(nombreInput, {
            list: opcionesNombre,
            minChars: 3, // Mínimo de caracteres antes de mostrar las sugerencias
        });
    </script>
</body>
</html>
